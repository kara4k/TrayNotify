<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_default"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_marginTop="@dimen/dimen_default"
                android:text="Text:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/textEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_marginRight="@dimen/dimen_default"
                android:layout_marginTop="@dimen/dimen_default"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_marginTop="@dimen/dimen_default"
                android:text="Title:"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_marginRight="@dimen/dimen_default"
                android:layout_marginTop="@dimen/dimen_default"
                android:background="@android:color/transparent"
                 />
        </LinearLayout>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_default"
            android:orientation="horizontal">

            <com.kara4k.traynotify.MyView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setDate"
                android:layout_weight="1"
                app:Title="Date"
                app:Text="09.01.2016"
                app:Image="@drawable/ic_event_black_24dp"
                app:CheckVisible="false"
                app:ImageVisible="true"/>

            <com.kara4k.traynotify.MyView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setTime"
                android:layout_weight="1"
                app:Title="Time"
                app:Text="18:21"
                app:Image="@drawable/ic_access_time_black_24dp"
                app:CheckVisible="false"
                app:ImageVisible="true"/>



        </LinearLayout>

        <com.kara4k.traynotify.MyView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/repeat2"
            app:Title="Repeat"
            app:Text="No"
            app:ImageVisible="false"
            app:Image="@drawable/ic_repeat_grey_24dp"
            app:isChecked="false"
            app:CheckVisible="true"/>

        <!--<View style="@style/Divider" />-->

        <Button
            android:id="@+id/repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_default"
            android:layout_marginRight="@dimen/dimen_default"
            android:layout_marginTop="@dimen/dimen_default"
            android:background="@color/colorPrimary"
            android:checked="false"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="5dp"
            android:text="Repeat"
            android:textColor="@android:color/white"
            android:textOff="HIDE"
            android:textOn="SHOW"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/days"
            android:layout_marginLeft="@dimen/dimen_default"
            android:layout_marginRight="@dimen/dimen_default"
            android:layout_marginTop="@dimen/dimen_default"
            android:orientation="horizontal"
            android:visibility="gone">


        </LinearLayout>

        <!--<View style="@style/Divider" />-->

        <com.kara4k.traynotify.MyView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sound"
            app:Title="Sound"
            app:Text="Default"
            app:ImageVisible="true"
            app:Image="@drawable/ic_phonelink_ring_black_24dp"
            />

        <com.kara4k.traynotify.MyView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vibrate"
            app:Title="Vibration"
            app:Text="Default"
            app:ImageVisible="true"
            app:Image="@drawable/ic_vibration_black_24dp"
            />

        <Button
            android:id="@+id/vibrate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_default"
            android:layout_marginRight="@dimen/dimen_default"
            android:layout_marginTop="@dimen/dimen_default"
            android:background="@color/colorPrimary"
            android:checked="false"
            android:drawableLeft="@drawable/ic_vibration_white_24dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="4dp"
            android:text="Default"
            android:textColor="@android:color/white"
            android:textOff="HIDE"
            android:textOn="SHOW"
            android:visibility="gone"/>

        <View style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="@dimen/dimen_default"
            android:orientation="horizontal">

            <Button
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="@dimen/button_padding"
                android:text="TEST"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_default"
                android:layout_marginRight="@dimen/dimen_default"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:padding="@dimen/button_padding"
                android:text="Create"
                android:textColor="@android:color/white" />

        </LinearLayout>



    </LinearLayout>
</ScrollView>