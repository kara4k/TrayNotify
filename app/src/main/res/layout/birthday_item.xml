<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/dimen_default"
    android:paddingRight="@dimen/dimen_default"
    android:paddingTop="@dimen/dimen_default">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/test"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toLeftOf="@+id/age"
        android:layout_toRightOf="@+id/photo"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_default"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toRightOf="@+id/photo"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/days_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toRightOf="@+id/photo"
        android:textColor="@android:color/black" />


    <ImageView
        android:id="@+id/sign"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/age"
        android:layout_marginTop="7dp"
        android:src="@drawable/aries"
        tools:ignore="ContentDescription" />


    <View
        style="@style/Divider"
        android:layout_below="@+id/photo" />


</RelativeLayout>