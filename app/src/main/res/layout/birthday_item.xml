<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingLeft="@dimen/dimen_default"
    android:paddingTop="@dimen/dimen_default"
    android:paddingRight="@dimen/dimen_default">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/test" />


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toLeftOf="@+id/age"
        android:layout_toRightOf="@+id/photo"
        android:layout_weight="1"
        android:text="Voitsel Dzmitry"
        android:textAppearance="?attr/textAppearanceListItem" />

    <TextView
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dimen_default"


        android:text="Age: 33"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="@dimen/dimen_default"
        android:layout_toRightOf="@+id/photo"
        android:text="25 август 1989"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="@color/colorPrimary" />


    <ImageView
        android:id="@+id/sign"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/age"
        android:layout_marginTop="7dp"
        android:src="@drawable/aries" />

    <LinearLayout
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photo"
        android:layout_marginTop="5dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/days_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Left: 245 days"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Wednesday"
            android:textColor="@android:color/black" />


    </LinearLayout>

    <View
        style="@style/Divider"
        android:layout_below="@+id/end" />


</RelativeLayout>