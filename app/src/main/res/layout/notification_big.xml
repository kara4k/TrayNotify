<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/n_big_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/n_big_main_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:cropToPadding="true"
            android:src="@drawable/test"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/n_big_main_icon"
            android:orientation="vertical">


            <TextView
                android:id="@+id/n_big_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:text="New Text"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/n_big_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="10"
                android:text="4545454545"
                android:textColor="@android:color/black" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/n_big_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/n_big_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="@dimen/n_big_actions_padding"
            android:paddingRight="@dimen/n_big_actions_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_share_icon"
                android:src="@drawable/ic_share_white_24dp" />

            <TextView
                style="@style/NotificationBigActionsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_share_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"

                android:text="@string/n_share" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/n_big_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="@dimen/n_big_actions_padding"
            android:paddingRight="@dimen/n_big_actions_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_copy_icon"
                android:src="@drawable/ic_content_copy_white_24dp" />

            <TextView
                style="@style/NotificationBigActionsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_copy_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/copy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/n_big_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="@dimen/n_big_actions_padding"
            android:paddingRight="@dimen/n_big_actions_padding">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_close_icon"
                android:src="@drawable/ic_close_white_24dp" />

            <TextView
                style="@style/NotificationBigActionsStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/n_big_close_text"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/close" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>